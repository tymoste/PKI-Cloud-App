<!-- views/gitloginsuccess.ejs -->
<!doctype html>
<html>
  <head>
    <title>Github OAuth</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"> <!-- load bulma css -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"> <!-- load fontawesome -->
      <style>
          body        { padding-top:70px; }
      </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand"><%userData.name%></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/glogin/logout">Logout</a>
          </li>
        </ul>
      </div>
    </nav>
    <div class="container">
        <table class="usersTable">
            <th>Name</th>
            <th>Last visit</th>
            <th>Joined</th>
            <th>Counter</th>
            <% queryResult.forEach(function(row){%>
              <tr>
                <td><%row.name%></td>
                <td><%row.lastvisit%></td>
                <td><%row.joined%></td>
                <td><%row.counter%></td>
              </tr>
            <%});%>
        </table>
    </div>
  </body>
</html>